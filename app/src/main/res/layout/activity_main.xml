<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/editText" android:layout_marginBottom="127dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="28dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="28dp" android:layout_marginEnd="28dp" android:layout_marginRight="28dp"/>
    <Button
            android:text="BOTON"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/botoncito" android:layout_marginTop="47dp"
            app:layout_constraintStart_toEndOf="@+id/editText" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="43dp" app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="3dp" android:layout_marginRight="3dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_marginTop="53dp" app:layout_constraintEnd_toStartOf="@+id/botoncito"
            android:layout_marginBottom="39dp" app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="20dp" android:layout_marginRight="20dp" android:hint="Ingrese el texto"/>
    <TextView
            android:text="Desarrollado por:Gustavo Gonzales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView2" app:layout_constraintHorizontal_bias="0.715"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginBottom="56dp"/>
</android.support.constraint.ConstraintLayout>